# Erase default options

set-option -g status-position bottom
setw -g window-status-format "#[bg=colour8,fg=colour2,noreverse]█▓░ #W "
setw -g window-status-current-format "#[bg=colour14,fg=colour8,noreverse]█▓░ #W "
set -g status-left ''
set -g status-right ''
set -g status-justify right
set-option -g pane-active-border-bg default
set-option -g pane-active-border-fg "#222930"
set-option -g pane-border-fg "#222930"
set-option -g pane-border-bg default
set -g status-bg default
