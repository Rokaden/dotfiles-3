# Erase default options

set-option -g status-position bottom
setw -g window-status-format "#[bg=#1e1e26,fg=colour2,noreverse]▎▍▌▋▊ #W "
setw -g window-status-current-format "#[bg=#1e1e26,fg=#597157,noreverse]▎▍▌▋▊ #W "
set -g status-left ''
set -g status-right ''
set -g status-justify right
set -g pane-active-border-style "fg=#1e1e26,bg=default"
set -g pane-border-style "fg=#1e1e26,bg=default"
set -g status-style "bg=#1e1e26"
